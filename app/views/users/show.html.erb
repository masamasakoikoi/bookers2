<main>
    <div>
      <%= flash[:notice] %>
    </div>
        <p id="notice"></p>
        <div class="container px-5 px-sm-0">
            <div class="row">
                <div class="col-md-3">
                    <h2>User info</h2>
                    <img src="">
                    <table class="table">
                        <tbody>
                            <tr></tr>
                            <tr>
                                <th>name</th>
                                <th><%= @user.name %></th>
                            </tr>
                            <tr>
                                <th>introduction</th>
                                <th><%= @user.introduction %></th>
                            </tr>
                        </tbody>
                    </table>
                    
                    <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block edit_user_path" do %>
                         <i class="fas fa-user-cog"></i> 
                        <% end %>
                    
                <h2 class="mt-3">New book</h2>
            <form action="/books" accept-charset="UTF-8"
                method="post">
                    <input type="hidden" name="authenticity_token"
                    value="A3kOo-mxypZ-ujUXpnnoDCZzxR7Co8rgmp1BEGBFJ38BigoMqdA4uQ7SFK5qNe_OOY9dMNCq5DGdieT7jhQOpw" autocomplete="off">
                <div class="form-group">
                    <label for="book_title">Title</label>
                    <input class="form-control book_title" type="text" name="book[title]" id="book_title">
                </div>
                
                <div class="form-group">
                    <label for="book_opinion">Opinion</label>
                    <textarea class="form-control book_body" name="book[body]" id="body"></textarea>
                </div>
                
                <div class="form-group">
                    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
                </div>
            </form>
         </div>
         <div class="col-md-8 offset-md-1">
             <h2>Books</h2>
             <table class="table table-hover table-inverse">
                 <thead>
                     <tr>
                         <th></th>
                         <th>Title</th>
                         <th>opinion</th>
                         <th colspan="3"></th>
                     </tr>
                 </thead>
                  <% @books.each do |book| %>
                     <tbody>
                         <tr>
                             <td><%= link_to @user_path do %><%= image_tag @user.get_profile_image(100,100) %><% end %></td>
                             <td><%= link_to book_path do %><%= book.title %><% end %></td>
                             <td><%= book.body %></td>
                    <% end %>
                     </tr>
                 </tbody>
             </table>
         </div>
        </div>
    </div>
    </main>