<body>

    <main>
        <p id="notice"></p>
        <div class="container px-5 px-sm-0">
            <div class="row">
                <div class="col-md-3">
                    <h2>User info</h2>
                    <%= image_tag current_user.get_profile_image(100,100) %>
                    <table class="table">
                        <tbody>
                            <tr></tr>
                            <tr>
                                <th>name</th>
                                <th><%= current_user.name %></th>
                            </tr>
                            <tr>
                                <th>introduction</th>
                                <th><%= current_user.introduction %></th>
                            </tr>
                        </tbody>
                    </table>
                    
                    <div class="row">
                         <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block edit_user_path" do %>
                         <i class="fas fa-user-cog"></i> 
                         <% end %>
                    </div>
                    
                    
                <h2 class="mt-3">New book</h2>
            <form action="/books" accept-charset="UTF-8"
                method="post">
                    <input type="hidden" name="authenticity_token"
                    value="A3kOo-mxypZ-ujUXpnnoDCZzxR7Co8rgmp1BEGBFJ38BigoMqdA4uQ7SFK5qNe_OOY9dMNCq5DGdieT7jhQOpw" autocomplete="off">
                <div class="form-group">
                <%= form_with model: @book do |f| %>
                    <label for="book_title">Title</label>
                    <%= f.text_field :title,class:"form-control book_title" %>
                </div>
                
                <div class="form-group">
                    <label for="book_opinion">Opinion</label>
                    <%= f.text_area :body,class:"form-control book_body" %>
                </div>
                
                <div class="form-group">
                    <%= f.submit 'Create Book',class:"btn btn-success" %>
                </div>
                <% end %>
            </form>
         </div>
             <h2>Books</h2>
             <table class="table table-hover table-inverse">
                 <thead>
                     <tr>
                         <th></th>
                         <th>Title</th>
                         <th>opinion</th>
                         <th colspan="3"></th>
                     </tr>
                 </thead>
                  <% @books.each do |book| %>
                     <tbody>
                         <tr>
                             <td><%= image_tag @user.get_profile_image(100,100) %></td>
                             <td><%= link_to book_path(book) do %><%= book.title %><% end %></td>
                             <td><%= book.body %></td>
                <% end %>
                     </tr>
                 </tbody>
             </table>
         </div>
        </div>
    </div>
    </main>
</body>
</html>