<body>

    <main>
        <p id="notice"></p>
        <div class="container px-5 px-sm-0">
            <div class="row">
                <div class="col-md-3">
                    <h2>User info</h2>
                    <img src="">
                    <table class="table">
                        <tbody>
                            <tr></tr>
                            <tr>
                                <th>name</th>
                                <th>masahiro</th>
                            </tr>
                            <tr>
                                <th>introduction</th>
                                <th>masahirodesu</th>
                            </tr>
                        </tbody>
                    </table>
                    <a class = "btn btn-outline-secondary btn-block edit_user_path" href="/users/:id/edit">
                        <i class="fas fa-user-cog"></i>
                     </a>
                <h2 class="mt-3">New book</h2>
            <form action="/books" accept-charset="UTF-8"
                method="post">
                
               <div class="form-group">
                    <label for="book_title">Title</label>
                    <input class="form-control book_title" type="text" name="book[title]" id="book_title">
                </div>
                
                <div class="form-group">
                    <label for="book_opinion">Opinion</label>
                    <textarea class="form-control book_body" name="book[body]" id="body"></textarea>
                </div>
                
                <div class="form-group">
                     <%= form_with model: @book do |f| %>
                    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
                </div>
            </form>
         </div>
         <% end %>
         <div class="col-md-8 offset-md-1">
             <h2>Books</h2>
             <table class="table table-hover table-inverse">
                 <thead>
                     <tr>
                         <th></th>
                         <th>Title</th>
                         <th>Opinion</th>
                         <th colspan="3"></th>
                     </tr>
                 </thead>
             </table>
         </div>
        </div>
    </div>
    </main>
</body>
</html>